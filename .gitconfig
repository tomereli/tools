[user]
	email = user@email.com
	name = user name

[core]
	gitProxy = /home/<user>/git-proxy
	gitproxy = none for intel.com
	editor = vi
	autocrlf = input
	pager = cat
	excludesfile = /home/<user>/.gitignore

[apply]
	ignorewhitespace = change

[color]
	ui = auto

[diff]
	tool = meld

[credential]
	helper = store

[http]
	sslverify = false

[url "https://github.com/"]
	insteadOf = git@github.com:

[url "https://github.com/"]
	insteadOf = ssh://git@github.com/

[url "https://gitlab.com/"]
	insteadOf = ssh://git@gitlab.com/

[format]
	signoff = true
